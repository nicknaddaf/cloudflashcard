
@{
    ViewData["Title"] = "Sign in";
}

<script>
    $(function () {
        $("#Email").focus();
    });
</script>

<div>&nbsp;</div>

<div class="row col-sm-12">
    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-modelstate-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Errors: ")
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-error">@ViewBag.Error</div>
    }

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success col-sm-12" role="alert" id="login-alert-success">@ViewBag.Success</div>
    }
</div>

<div class="row">
    <div class="col-6">
        <form asp-controller="signin"
              asp-action="index"
              asp-route-returnurl="@ViewBag.ReturnUrl"
              method="post"
              class="form-horizontal"
              role="form"
              id="SigninForm">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                <small id="emailHelp" class="form-text text-muted">&nbsp;</small>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


