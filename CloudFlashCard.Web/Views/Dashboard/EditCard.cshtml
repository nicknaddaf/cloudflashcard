@model CloudFlashCard.Web.Models.FlashCardViewModel

@{
    ViewData["Title"] = "Edit Card";
}

<script>
    $(function () {
        $("#Content").focus();
    });
</script>

<div>&nbsp;</div>

<div class="row col-sm-12">
    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-modelstate-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Errors: ")
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-error">@ViewBag.Error</div>
    }

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success col-sm-12" role="alert" id="login-alert-success">@ViewBag.Success</div>
    }
</div>

<div class="row">
    <div class="col-6">
        <form asp-controller="dashboard"
              asp-action="editcard"
              asp-route-returnurl="@ViewBag.ReturnUrl"
              method="post"
              class="form-horizontal"
              role="form"
              id="SignupForm">

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Flash Card Content</label>
                @Html.TextArea("Content", null, 10, 50, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Name">Create Date</label>
                @Html.TextBox("CreateDate", null, new { @class = "form-control", @readonly = "readonly" })
                <small id="nameHelp" class="form-text text-muted">&nbsp;</small>
            </div>
            <div class="form-group">
                <label for="Name">Update Date</label>
                @Html.TextBox("UpdateDate", null, new { @class = "form-control", @readonly = "readonly" })
                <small id="nameHelp" class="form-text text-muted">&nbsp;</small>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
