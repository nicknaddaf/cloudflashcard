@model CloudFlashCard.Web.Models.NewCardViewModel

@{
    ViewData["Title"] = "New Flash Card";
}

<script>
    $(function () {
        $("#Content").focus();
    });
</script>

<div>&nbsp;</div>

<div class="row col-sm-12">
    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-modelstate-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Errors: ")
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger col-sm-12" role="alert" id="login-alert-error">@ViewBag.Error</div>
    }

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success col-sm-12" role="alert" id="login-alert-success">@ViewBag.Success</div>
    }
</div>

<div class="row">
    <div class="col-12">
        <form asp-controller="dashboard"
              asp-action="newcard"
              asp-route-returnurl="@ViewBag.ReturnUrl"
              method="post"
              class="form-horizontal"
              role="form"
              id="SignupForm">

            @Html.Hidden("TopicId")

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Topic</label>
                <label for="exampleFormControlTextarea1"><a href="@Url.Action("", "", new { id = Model.TopicId })">@Model.TopicId</a></label>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Flash Card Content</label>
                <textarea class="form-control rounded-0 col-lg-6" id="Content" name="Content" rows="10"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="@Url.Action("newcard2", "dashboard", new { id = Model.TopicId })">Record New Card</a>
        </form>
    </div>
</div>
