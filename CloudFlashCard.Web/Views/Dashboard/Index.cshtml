@model List<CloudFlashCard.Web.Models.Topic>

@{
    ViewData["Title"] = "Dashboard";
}

<script src="~/js/Holder.js"></script>

<div class="row col-md-12">
    <div class="d-block mt-3">
        <a href="@Url.Action("newtopic", "dashboard")">Create New Topic</a>
    </div>
</div>

<div>&nbsp;</div>

<div class="bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">My Topics</h6>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="media text-muted pt-3">
                <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
                <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <strong class="text-gray-dark"><a href="@Url.Action("edittopic", "dashboard", new { id = item.TopicId.Value})">@item.Name.Value</a></strong>
                        <div>
                            <a href="@Url.Action("cardsbytopic", "dashboard", new { id = item.TopicId.Value })">View Cards</a>&nbsp;|&nbsp;
                            <a href="@Url.Action("newcard", "dashboard", new { id = item.TopicId.Value })">New Card</a>
                        </div>
                    </div>
                    <span class="d-block small">Created On: @item.CreateDate.Value</span>
                </div>
            </div>
        }
    }
</div>

